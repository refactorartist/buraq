{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
    "rustup@latest",
    "mermaid-cli@latest",
    "bruno@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null",
      "rustup default stable"
    ],
    "scripts": {
      "tests": [
        "docker compose up -d",
        "cargo test",
        "devbox run shutdown"
      ],
      "app": [
        "docker compose up -d",
        "cargo run",
        "devbox run shutdown"
      ],
      "shutdown": [
        "docker compose down"
      ]
    }
  }
}
